{
    "name": "exolnet/laravel-graylog",
    "description": "This package extends Laravelâ€™s log package to add a graylog channel.",
    "keywords": [
        "exolnet",
        "laravel",
        "laravel-graylog"
    ],
    "homepage": "https://github.com/eXolnet/laravel-graylog",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexandre D'Eschambeault",
            "email": "adeschambeault@exolnet.com"
        },
        {
            "name": "Pat Gagnon-Renaud",
            "email": "pgrenaud@exolnet.com"
        },
        {
            "name": "Simon Gaudreau",
            "email": "sgaudreau@exolnet.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0",
        "graylog2/gelf-php": "^1.7",
        "illuminate/contracts": "^6.10|^7.0|^8.0",
        "illuminate/log": "^6.10|^7.0|^8.0",
        "illuminate/support": "^6.10|^7.0|^8.0",
        "monolog/monolog": "^1.24|^2.0"
    },
    "require-dev": {
        "exolnet/phpcs-config": "^2.0",
        "mockery/mockery": "^1.4",
        "orchestra/testbench": "^4.0|^5.0|^6.0",
        "phpunit/phpunit": "^9.3.3",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Exolnet\\Graylog\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Exolnet\\Graylog\\Tests\\": "tests"
        }
    },
    "scripts": {
        "lint": "vendor/bin/phpcs -p -s --standard=ruleset.xml",
        "lint-fix": "vendor/bin/phpcbf -p --standard=ruleset.xml",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Exolnet\\Graylog\\GraylogServiceProvider"
            ]
        }
    }
}
